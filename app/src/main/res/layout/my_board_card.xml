<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorIntro"
    android:layout_marginTop="@dimen/my_boards_card_margin"
    android:layout_marginLeft="@dimen/my_boards_card_margin"
    android:layout_marginRight="@dimen/my_boards_card_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/my_board_four_grid_icon_size"
        android:padding="@dimen/my_boards_card_margin"
        android:layout_height="@dimen/my_board_four_grid_icon_size"
        android:src="@drawable/ic_board_person"
        android:id="@+id/board_icon"
        android:background="@drawable/board_list_back"
        />

    <TextView
        android:id="@+id/board_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/my_board_four_grid_icon_size"
        android:layout_marginTop="@dimen/my_board_title_top_margin"
        android:layout_below="@+id/board_icon"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/my_board_text_size"
        />

    <ImageView
        android:layout_width="@dimen/my_board_edit_icon_size"
        android:layout_height="@dimen/my_board_edit_icon_size"
        android:layout_marginLeft="-6dp"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-6dp"
        android:id="@+id/edit_board"
        android:src="@drawable/ic_edit_icon_red_back" />
    <ImageView
        android:layout_width="@dimen/my_board_edit_icon_size"
        android:layout_height="@dimen/my_board_edit_icon_size"
        android:src="@drawable/ic_delete_icon_red_back"
        android:layout_toRightOf="@id/board_icon"
        android:layout_marginLeft="-16dp"
        android:id="@+id/remove_board"
         />
</RelativeLayout>
