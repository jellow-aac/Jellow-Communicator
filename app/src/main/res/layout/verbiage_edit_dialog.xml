<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyDialogBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded_back"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/expressive_verbiage_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/edit_board_button_side_margin"
            android:layout_marginRight="@dimen/edit_board_button_side_margin"
            android:background="@drawable/edit_board_dialog_edit_text"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:clickable="false"
            android:padding="2dp"
            android:src="@drawable/ic_drop_down"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp" />
        <TextView
            android:id="@+id/xyz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:text="@string/expressive_heading"
            android:textColor="#dc5252"
            android:textStyle="bold"
            />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container"
            android:layout_marginTop="4dp"
            android:fadeScrollbars="false"
            android:scrollbars="vertical">
        <LinearLayout
            android:id="@+id/exp_verbiage_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="8dp"
            />
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="@dimen/dialog_width_verbiage"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/edit_baord_dialog_side_margin"
        android:layout_marginLeft="@dimen/edit_baord_dialog_side_margin"
        android:layout_marginRight="@dimen/edit_baord_dialog_side_margin"
        android:layout_marginTop="@dimen/edit_board_dialog_internal_margin_top"
        android:background="@color/white"
        >


        <Button
            android:id="@+id/save_baord"
            android:layout_width="@dimen/edit_board_button_width"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_background"
            android:paddingLeft="@dimen/edit_board_button_side_margin"
            android:paddingRight="@dimen/edit_board_button_side_margin"
            android:text="Save"
            android:textAlignment="center"
            android:textColor="@color/colorIntro"
            android:textSize="@dimen/edit_board_dialog_button_text_size"
            />
        <Button
            android:id="@+id/cancel_save_baord"
            android:layout_width="@dimen/edit_board_button_width"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_background"
            android:paddingLeft="@dimen/edit_board_button_side_margin"
            android:paddingRight="@dimen/edit_board_button_side_margin"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/colorIntro"
            android:textSize="@dimen/edit_board_dialog_button_text_size"
            />
    </RelativeLayout>
</RelativeLayout>