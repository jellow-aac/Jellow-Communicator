<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:fadeScrollbars="false"
        android:layout_marginTop="@dimen/reset_pref_parent_margin_vertical"
        android:layout_marginBottom="@dimen/reset_pref_parent_margin_vertical"
        android:layout_marginLeft="@dimen/reset_pref_parent_margin_left"
        android:layout_marginStart="@dimen/reset_pref_parent_margin_left"
        android:layout_marginRight="@dimen/reset_pref_parent_margin_right"
        android:layout_marginEnd="@dimen/reset_pref_parent_margin_right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/reset_pref_ll_margin_right"
            android:layout_marginEnd="@dimen/reset_pref_ll_margin_right"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_eighty"
                    android:layout_marginEnd="@dimen/reset_pref_bullet_margin_right"
                    android:layout_marginRight="@dimen/reset_pref_bullet_margin_right"
                    android:scaleX="@dimen/reset_pref_bullet_scale"
                    android:scaleY="@dimen/reset_pref_bullet_scale"
                    android:importantForAccessibility="no"
                    android:text="@string/bullet" />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/defaultTextViewStyle"
                    android:text="@string/resetPrefPointOne"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/reset_pref_ll_margin_top"
                android:layout_marginBottom="@dimen/reset_pref_ll_margin_top"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_eighty"
                    android:layout_marginEnd="@dimen/reset_pref_bullet_margin_right"
                    android:layout_marginRight="@dimen/reset_pref_bullet_margin_right"
                    android:scaleX="@dimen/reset_pref_bullet_scale"
                    android:scaleY="@dimen/reset_pref_bullet_scale"
                    android:importantForAccessibility="no"
                    android:text="@string/bullet" />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resetPrefPointTwo"
                    style="@style/defaultTextViewStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_eighty"
                    android:layout_marginEnd="@dimen/reset_pref_bullet_margin_right"
                    android:layout_marginRight="@dimen/reset_pref_bullet_margin_right"
                    android:scaleX="@dimen/reset_pref_bullet_scale"
                    android:scaleY="@dimen/reset_pref_bullet_scale"
                    android:importantForAccessibility="no"
                    android:text="@string/bullet" />
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resetPrefPointThree"
                    style="@style/defaultTextViewStyle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/reset_pref_bottom_bar_height"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/menu_screen_bottom_bar"
        android:gravity="center_vertical"
        android:importantForAccessibility="yes">

        <Button
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reset_pref_btn_height"
            android:text="@string/yes_btn"
            android:textSize="@dimen/reset_pref_btn_txt_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/reset_pref_btn_margin_left"
            android:layout_marginStart="@dimen/reset_pref_btn_margin_left" />
        <Button
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/reset_pref_btn_height"
            android:text="@string/no_btn"
            android:textSize="@dimen/reset_pref_btn_txt_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/reset_pref_btn_margin_left"
            android:layout_marginStart="@dimen/reset_pref_btn_margin_left" />
    </LinearLayout>
</RelativeLayout>