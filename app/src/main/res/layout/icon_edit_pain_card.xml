<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_marginLeft="36dp"
    android:layout_marginRight="36dp"
    android:layout_width="@dimen/icon_edit_grid_size"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/icon_edit_icon_size"
        android:layout_height="@dimen/icon_edit_icon_size"
        android:padding="2dp"
        android:id="@+id/icon_image_view"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech_Label"
        android:id="@+id/icon_title"
        android:textAlignment="center"
        android:textColor="@color/black_80"
        android:textSize="@dimen/icon_edit_text_size"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icon_image_view"
        />

    <ImageView
        android:id="@+id/icon_remove_button"
        android:layout_width="28dp"
        android:layout_height="@dimen/my_board_edit_icon_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/board_icon"
        android:padding="4dp"
        android:gravity="top"
        android:src="@drawable/ic_delete_icon_red_back" />

</RelativeLayout>
</RelativeLayout>