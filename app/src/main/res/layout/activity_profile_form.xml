<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:isScrollContainer="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/profile_parent_margin_left"
        android:layout_marginStart="@dimen/profile_parent_margin_left"
        android:layout_marginTop="@dimen/profile_parent_margin_vertical"
        android:layout_marginBottom="@dimen/profile_parent_margin_vertical"
        android:layout_marginRight="@dimen/profile_parent_margin_right"
        android:layout_marginEnd="@dimen/profile_parent_margin_right">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideInset"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="@dimen/profile_scroll_size"
            android:isScrollContainer="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/profile_parent_ll_margin_right"
                android:layout_marginEnd="@dimen/profile_parent_ll_margin_right"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/childName"
                    android:fontFamily="@font/mukta_semibold"
                    style="@style/defaultTextViewStyle"
                    android:contentDescription="@string/child_s_name"
                    android:importantForAccessibility="yes"/>
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/profile_view_margin_bottom"
                    android:layout_marginLeft="@dimen/profile_et_margin_left"
                    android:layout_marginStart="@dimen/profile_et_margin_left"
                    android:imeOptions="actionDone"
                    style="@style/defaultTextViewStyle"
                    android:inputType="textPersonName"
                    android:contentDescription="@string/enter_child_s_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/caregiverName"
                    android:fontFamily="@font/mukta_semibold"
                    style="@style/defaultTextViewStyle"/>
                <EditText
                    android:id="@+id/etFathername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/profile_view_margin_bottom"
                    android:layout_marginLeft="@dimen/profile_et_margin_left"
                    android:layout_marginStart="@dimen/profile_et_margin_left"
                    style="@style/defaultTextViewStyle"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:contentDescription="@string/enter_caregiver_s_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/careGiverContact"
                    android:fontFamily="@font/mukta_semibold"
                    style="@style/defaultTextViewStyle"
                    android:contentDescription="@string/caregiver_s_contact_number_other_than_this_device_s_sim_number"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_view_margin_bottom">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_textSize="@dimen/profile_ccp_txt_size"
                    app:ccpDialog_textColor="@color/black_eighty"
                    app:ccpDialog_showCloseIcon="true"
                    app:ccp_countryPreference="IN,US,GB"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_autoFormatNumber="false"
                    app:ccpDialog_keyboardAutoPopup="false"
                    app:ccpDialog_backgroundColor="@color/app_background"
                    android:contentDescription="@string/select_country_code"/>
                <EditText
                    android:id="@+id/etFathercontact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="12"
                    style="@style/defaultTextViewStyle"
                    android:imeOptions="actionDone"
                    android:contentDescription="@string/enter_caregiver_s_contact_number" />
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/homeAddress"
                    android:fontFamily="@font/mukta_semibold"
                    style="@style/defaultTextViewStyle"/>
                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/profile_view_margin_bottom"
                    android:layout_marginLeft="@dimen/profile_et_margin_left"
                    android:layout_marginStart="@dimen/profile_et_margin_left"
                    style="@style/defaultTextViewStyle"
                    android:imeOptions="actionDone"
                    android:inputType="textPostalAddress"
                    android:contentDescription="@string/enter_home_address"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emailAddress"
                    android:fontFamily="@font/mukta_semibold"
                    style="@style/defaultTextViewStyle"
                    android:contentDescription="@string/caregiver_s_email_address"/>
                <EditText
                    android:id="@+id/etEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/profile_view_margin_bottom"
                    android:layout_marginLeft="@dimen/profile_et_margin_left"
                    android:layout_marginStart="@dimen/profile_et_margin_left"
                    style="@style/defaultTextViewStyle"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:contentDescription="@string/enter_caregiver_s_email_address"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bloodGroup"
                    android:fontFamily="@font/mukta_semibold"
                    style="@style/defaultTextViewStyle"/>
                <Spinner
                    android:id="@+id/bloodgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/profile_spinner_height"
                    android:paddingRight="@dimen/profile_spinner_right_padding"
                    android:paddingEnd="@dimen/profile_spinner_right_padding"
                    android:background="@drawable/custom_spinner_view"/>
                <TextView
                    style="@style/defaultTextViewStyle"
                    android:text="@string/txt_data_info"
                    android:layout_marginTop="@dimen/user_reg_btn_margin_top"/>
                <TextView
                    android:id="@+id/view_privacy_policy"
                    style="@style/defaultTextViewStyle"
                    android:text="@string/txt_view_privacy_policy"
                    android:onClick="openPrivacyPolicyPage"
                    android:layout_marginBottom="@dimen/profile_view_margin_bottom"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_view_height" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_view_height"
        android:background="@color/menu_screen_bottom_bar"
        android:layout_alignParentBottom="true"
        android:importantForAccessibility="yes">
        <Button
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/profile_save_btn_height"
            android:textSize="@dimen/profile_save_btn_txt_size"
            android:text="@string/txtSave"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/profile_save_btn_padding_left"
            android:paddingRight="@dimen/profile_save_btn_padding_left"
            android:layout_marginLeft="@dimen/profile_btn_save_margin_left"
            android:layout_marginStart="@dimen/profile_btn_save_margin_left"/>
    </LinearLayout>
</RelativeLayout>
