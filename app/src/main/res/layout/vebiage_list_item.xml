<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/like"
        />
    <EditText
        android:id="@+id/verbiage_text"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/icon"
        android:background="@drawable/edit_board_dialog_edit_text"
        android:hint="I like "
        android:maxLines="1"
        android:padding="4dp"
        android:paddingLeft="6dp"
        android:singleLine="true"
        android:textColor="@color/black_80"
        android:textSize="14sp"
        />

        <EditText
            android:id="@+id/verbiage_really_text"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/verbiage_text"
            android:background="@drawable/edit_board_dialog_edit_text"
            android:hint="I really like "
            android:maxLines="1"
            android:padding="4dp"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textColor="@color/black_80"
            android:textSize="14sp" />
    <ImageView
        android:id="@+id/add_remove"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@id/verbiage_really_text"
        android:layout_centerVertical="false"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="-4dp"
        android:src="@drawable/minus"

        />
    </RelativeLayout>

</RelativeLayout>