<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    style="@style/MyDialogBox"
    android:background="@drawable/base_color_rounded_back"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="@dimen/custom_dialog_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_box_text_size"
        android:id="@+id/dialog_text"
        android:textAlignment="center"
        android:text="Dialog_Text"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        />

    <RelativeLayout
        android:layout_width="@dimen/custom_dialog_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/dialog_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp">


        <Button
            android:id="@+id/positive"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="@string/yes"
            android:paddingLeft="@dimen/mmb_btn_pad"
            android:paddingRight="@dimen/mmb_btn_pad"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/profile_save_btn_height"
            android:textSize="@dimen/profile_save_btn_txt_size"
            />

        <Button
            android:id="@+id/negative"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:paddingLeft="@dimen/mmb_btn_pad"
            android:paddingRight="@dimen/mmb_btn_pad"
            android:layout_alignParentRight="true"
            android:text="@string/no"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/profile_save_btn_height"
            android:textSize="@dimen/profile_save_btn_txt_size"/>
    </RelativeLayout>


</RelativeLayout>
