<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/oneByOne_parentVertical"
    android:layout_marginLeft="@dimen/oneByOne_parentHorizontal"
    android:layout_marginRight="@dimen/oneByOne_parentHorizontal"
    android:layout_marginTop="@dimen/oneByOne_parentVertical">
    <ImageView
        android:id="@+id/icon_remove_button"
        android:layout_width="@dimen/my_board_edit_icon_size"
        android:layout_height="@dimen/my_board_edit_icon_size"
        android:layout_marginLeft="@dimen/oneByOne_crossMargin"
        android:layout_toRightOf="@id/icon_container"
        android:background="@drawable/circular_background_red"
        android:padding="4dp"
        android:src="@drawable/ic_cross_icon"/>
    <FrameLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/icon_image_view"
            android:layout_width="@dimen/oneByOne_width"
            android:layout_height="@dimen/oneByOne_width"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/level1_daily_300"
            android:scaleType="centerInside" />
        <View
            android:id="@+id/borderView"
            android:layout_width="@dimen/oneByOne_width"
            android:layout_height="@dimen/oneByOne_width"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_drawable_nocolor_1by1"/>
    </FrameLayout>
    <TextView
        android:id="@+id/icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_container"
        android:layout_centerHorizontal="true"
        android:text="TIME AND WEATHER"
        android:textSize="@dimen/oneByOne_textSize"/>
</RelativeLayout>