<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level1_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:tag="small">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/expressiveOne"
                android:alpha=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivlike"
                    android:layout_width="@dimen/exp_icon_width"
                    android:layout_height="@dimen/exp_icon_height"
                    android:src="@drawable/like"/>
                <ImageView

                    android:id="@+id/ivyes"
                    android:layout_width="@dimen/exp_icon_width"
                    android:layout_height="@dimen/exp_icon_height"
                    android:src="@drawable/yes"/>
                <ImageView
                    android:id="@+id/ivadd"
                    android:layout_width="@dimen/exp_icon_width"
                    android:layout_height="@dimen/exp_icon_height"
                    android:src="@drawable/more"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/expressiveTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:alpha=".5"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivdislike"
                    android:layout_width="@dimen/exp_icon_width"
                    android:layout_height="@dimen/exp_icon_height"
                    android:src="@drawable/dontlike"/>
                <ImageView
                    android:id="@+id/ivno"
                    android:layout_width="@dimen/exp_icon_width"
                    android:layout_height="@dimen/exp_icon_height"
                    android:src="@drawable/no"/>
                <ImageView
                    android:id="@+id/ivminus"
                    android:layout_width="@dimen/exp_icon_width"
                    android:layout_height="@dimen/exp_icon_height"
                    android:src="@drawable/less"/>
            </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_toLeftOf="@id/expressiveTwo"
            android:layout_toRightOf="@id/expressiveOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical"
            android:scrollbarFadeDuration="0"
            android:layout_marginBottom="@dimen/recycler_view_margin_bottom"
            android:layout_toStartOf="@id/expressiveTwo"
            android:layout_toEndOf="@id/expressiveOne" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayoutNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/nav_bar_margin_bottom">
        <ImageView
            android:id="@+id/ivhome"
            android:layout_width="@dimen/home_icon_width"
            android:layout_height="@dimen/home_icon_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/keyboard"
            android:layout_width="@dimen/keyboard_icon_width"
            android:layout_height="@dimen/keyboard_icon_height"
            android:src="@drawable/keyboard"
            android:alpha=".5"
            android:layout_toRightOf="@+id/ivhome"/>
        <ImageView
            android:id="@+id/ivback"
            android:layout_width="@dimen/back_icon_width"
            android:layout_height="@dimen/back_icon_height"
            android:src="@drawable/back"
            android:layout_toLeftOf="@+id/ivhome"/>
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_board_dialog_edit_text"
            android:padding="-8dp"
            android:text="Save"
            android:textColor="@color/colorIntroSelected" />
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/jellow_icon_width"
        android:layout_height="@dimen/jellow_icon_height"
        android:src="@drawable/jellow"
        android:clickable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/jellow_icon_margin_bottom"/>
</RelativeLayout>