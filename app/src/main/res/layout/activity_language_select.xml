<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F3C6"
    tools:context="com.dsource.idc.jellowintl.LanguageSelectActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="19dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_title_editLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editLanguage"
                android:layout_marginBottom="10dp"
                style="@style/defaultTextViewStyle"
                android:fontFamily="@font/mukta_semibold"/>
            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_language_tts_wifi"
                style="@style/defaultTextViewStyle"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivAddLang1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/lang_setting_option1_cd"/>
                <ImageView
                    android:id="@+id/ivArrow1"
                    android:layout_width="55dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:importantForAccessibility="no"/>
                <ImageView
                    android:id="@+id/ivAddLang2"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/lang_setting_option2_cd"/>
                <ImageView
                    android:id="@+id/ivArrow2"
                    android:layout_width="55dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:importantForAccessibility="no"/>
                <ImageView
                    android:id="@+id/ivAddLang3"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/lang_setting_option3_cd"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnTTsSetting"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/txt_tts_stting"
                android:onClick="openSpeechSetting"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:layout_marginBottom="10dp"
                android:text="@string/add_new_language"
                style="@style/defaultTextViewStyle"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/addBut"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"

                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/addLanguage"/>
                <Button
                    android:id="@+id/delBut"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/deleteLanguage" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_title_chgLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtChangeLanguage"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="10dp"
                style="@style/defaultTextViewStyle"
                android:fontFamily="@font/mukta_semibold"/>
            <TextView
                android:id="@+id/txt_followSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/change_language_line6"
                style="@style/defaultTextViewStyle"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_language_line2"
                android:layout_marginBottom="10dp"
                style="@style/defaultTextViewStyle"/>
            <Spinner
                android:id="@+id/selectDownloadedLanguageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/custom_spinner_view"
                android:minWidth="98dp"
                android:paddingRight="28dp"
                android:paddingEnd="28dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_language_line5"
                android:layout_marginBottom="10dp"
                style="@style/defaultTextViewStyle"/>
            <ImageView
                android:id="@+id/ivTtsVoiceDat"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/gtts3" />
            <Button
                android:id="@+id/btnDownloadVoiceData"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/txt_actLangSel_downloadDat"
                android:onClick="openSpeechDataSetting"/>
            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_language_line4"
                android:layout_marginBottom="10dp"
                style="@style/defaultTextViewStyle"/>
            <LinearLayout
                android:id="@+id/llImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-14dp"
                android:layout_marginStart="-14dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivTtsSetting1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/gtts1"/>
                <ImageView
                    android:id="@+id/ivArrow3"
                    android:layout_width="55dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:importantForAccessibility="no"/>
                <ImageView
                    android:id="@+id/ivTtsSetting2"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/gtts2"/>
                <ImageView
                    android:id="@+id/ivArrow4"
                    android:layout_width="55dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:importantForAccessibility="no"/>
                <ImageView
                    android:id="@+id/ivTtsSetting3"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/lang_setting_option3_gtt3_cd"/>
            </LinearLayout>
            <Button
                android:id="@+id/changeTtsLangBut"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/change_tts_lang"/>
            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtApplyChanges"
                android:layout_marginBottom="10dp"
                style="@style/defaultTextViewStyle"/>
            <Button
                android:id="@+id/saveBut"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/saveLanguage" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
