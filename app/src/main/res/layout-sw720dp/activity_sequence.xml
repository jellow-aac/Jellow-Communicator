<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level1_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:tag="large">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivlike"
                        android:layout_width="132dp"
                        android:layout_height="126dp"
                        android:src="@drawable/like"
                        android:contentDescription="@string/like"/>
                    <ImageView
                        android:id="@+id/ivyes"
                        android:layout_width="132dp"
                        android:layout_height="126dp"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:src="@drawable/yes"
                        android:contentDescription="@string/yes"/>
                    <ImageView
                        android:id="@+id/ivadd"
                        android:layout_width="132dp"
                        android:layout_height="126dp"
                        android:src="@drawable/more"
                        android:contentDescription="@string/more"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivdislike"
                        android:layout_width="132dp"
                        android:layout_height="126dp"
                        android:src="@drawable/dontlike"
                        android:contentDescription="@string/dont_like"/>
                    <ImageView
                        android:id="@+id/ivno"
                        android:layout_width="132dp"
                        android:layout_height="126dp"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:src="@drawable/no"
                        android:contentDescription="@string/no"/>
                    <ImageView
                        android:id="@+id/ivminus"
                        android:layout_width="132dp"
                        android:layout_height="126dp"
                        android:src="@drawable/less"
                        android:contentDescription="@string/less"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="890dp"
                android:layout_height="475dp"
                android:layout_centerInParent="true"
                android:padding="@dimen/activity_vertical_margin">
                <TextView
                    android:id="@+id/tt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="brushing"
                    android:fontFamily="@font/mukta_semibold"
                    android:layout_alignParentTop="true"
                    android:fontFeatureSettings="smcp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:id="@+id/linearLayoutOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/image1"
                                    android:layout_width="215dp"
                                    android:layout_height="215dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@android:color/transparent"
                                    android:scaleType="centerInside"/>
                                <View
                                    android:id="@+id/borderView1"
                                    android:layout_width="215dp"
                                    android:layout_height="215dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/border_drawable_nocolor_3_icons"/>
                            </FrameLayout>
                            <ImageButton
                                android:id="@+id/arrow1"
                                android:layout_width="100dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center_vertical"
                                android:clickable="false"
                                android:background="@drawable/arrow"
                                android:importantForAccessibility="no"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/bt1"
                            android:layout_width="205dp"
                            android:layout_height="wrap_content"
                            android:minLines="2"
                            android:textAlignment="center"
                            android:text="ddadasdasd"
                            android:textSize="22sp"
                            android:importantForAccessibility="no"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayoutTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/linearLayoutOne"
                        android:layout_toEndOf="@+id/linearLayoutOne">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/image2"
                                    android:layout_width="215dp"
                                    android:layout_height="215dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@android:color/transparent"
                                    android:scaleType="centerInside" />
                                <View
                                    android:id="@+id/borderView2"
                                    android:layout_width="215dp"
                                    android:layout_height="215dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/border_drawable_nocolor_3_icons"/>
                            </FrameLayout>
                            <ImageButton
                                android:id="@+id/arrow2"
                                android:layout_width="100dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center_vertical"
                                android:clickable="false"
                                android:background="@drawable/arrow"
                                android:importantForAccessibility="no"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/bt2"
                            android:layout_width="205dp"
                            android:layout_height="wrap_content"
                            android:minLines="2"
                            android:textAlignment="center"
                            android:text="ddadasdasd"
                            android:textSize="22sp"
                            android:importantForAccessibility="no"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/linearLayoutTwo"
                        android:layout_toRightOf="@+id/linearLayoutTwo">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/image3"
                                    android:layout_width="215dp"
                                    android:layout_height="215dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@android:color/transparent"
                                    android:scaleType="centerInside" />
                                <View
                                    android:id="@+id/borderView3"
                                    android:layout_width="215dp"
                                    android:layout_height="215dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/border_drawable_nocolor_3_icons" />
                            </FrameLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/bt3"
                            android:layout_width="205dp"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:minLines="2"
                            android:text="ddadasdasd"
                            android:textAlignment="center"
                            android:textSize="22sp"
                            android:importantForAccessibility="no" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/backward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textSize="20sp"
                        style="@style/customNavButtonStyle"
                        android:layout_marginLeft="64dp"
                        android:layout_marginRight="64dp"
                        android:text="&lt;&lt;  Previous"
                        android:contentDescription="@string/previous"/>
                    <Button
                        android:id="@+id/forward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textSize="20sp"
                        style="@style/customNavButtonStyle"
                        android:layout_marginLeft="64dp"
                        android:layout_marginRight="64dp"
                        android:text="Next &gt;&gt; "
                        android:contentDescription="@string/next"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-16dp">
        <ImageView
            android:id="@+id/ivhome"
            android:layout_width="160dp"
            android:layout_height="168dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home"
            android:contentDescription="@string/home"/>
        <ImageView
            android:id="@+id/keyboard"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/keyboard"
            android:layout_toRightOf="@+id/ivhome"
            android:contentDescription="@string/keyboard_open"/>
        <ImageView
            android:id="@+id/ivback"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/back"
            android:layout_toLeftOf="@+id/ivhome"
            android:contentDescription="@string/back"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="168dp"
        android:layout_height="112dp"
        android:src="@drawable/jellow"
        android:clickable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:importantForAccessibility="no"/>
</RelativeLayout>
