            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".activities.LevelTwoActivity"
            android:label="@string/level_2_screen"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan"
            tools:ignore="LockedOrientationActivity"/>
